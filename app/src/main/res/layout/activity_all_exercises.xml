<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:deviceIds="wear"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/trainingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Void"
            android:fontFamily="sans-serif-medium"
            android:textColor="#FDFEFE"
            android:textAlignment="center"
            android:textSize="18dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/counter"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text=""
                android:gravity="center"
                android:layout_marginLeft="63dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#FDFEFE"
                android:textSize="30dp"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/bg_round_ex"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                android:layout_marginTop="35dp"
                android:gravity="bottom"
                android:textColor="#FDFEFE"
                android:textSize="28dp"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:id="@+id/NbRep"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="left|bottom"
                android:layout_marginTop="38dp"
                android:textColor="#FDFEFE"
                android:textSize="25dp"
                android:fontFamily="sans-serif-light"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/past"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:padding="0dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cornerRadius="100dp"
                app:icon="@drawable/ic_baseline_arrow_forward_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="15dp"
                app:iconTint="#FDFEFE" />

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_pause"
                    android:visibility="visible"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:clickable="true"
                    android:layout_marginTop="11dp"
                    android:backgroundTint="#229954"
                    android:padding="0dp"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cornerRadius="100dp"
                    app:icon="@drawable/ic_baseline_pause_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="20dp"
                    app:iconTint="#FDFEFE" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/play"
                    android:visibility="invisible"
                    style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:clickable="false"
                    android:layout_marginTop="11dp"
                    android:backgroundTint="#229954"
                    android:padding="0dp"
                    android:theme="@style/Theme.MaterialComponents.Light"
                    app:cornerRadius="100dp"
                    app:icon="@drawable/ic_baseline_arrow_right_24"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:iconSize="35dp"
                    app:iconTint="#FDFEFE" />

            </RelativeLayout>

            <Space
                android:layout_width="5dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:padding="0dp"
                android:theme="@style/Theme.MaterialComponents.Light"
                app:cornerRadius="100dp"
                app:icon="@drawable/ic_baseline_clear_24"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="15dp"
                app:iconTint="#FDFEFE" />


        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="3dp" />

        <TextView
            android:id="@+id/HH"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="VOID"
            android:textColor="#FDFEFE"
            android:textSize="12dp"
            android:fontFamily="sans-serif-thin"/>

    </LinearLayout>

</androidx.wear.widget.BoxInsetLayout>
